<%= simple_form_for @book, :html => {:multipart => true}  do |f| %>
    <%= select_tag(:category_id, options_for_select(@categories), :prompt => 'Select a category' )%>
    <%= f.file_field :book_img %>
    <%= f.input :title, label: 'Book Title '%>
    <%= f.input :description%>
    <%= f.input :language%>
    <%= select_tag(:author_id, options_for_select(@authors), :prompt => 'Select an author' )%>
    <%= select_tag(:publisher_id, options_for_select(@publishers), :prompt => 'Select a publisher' )%>
    <%= select_tag(:age_id, options_for_select(@ages), :prompt => 'Select an age' )%>
    <%= f.input :price %>
    <%= f.input :publication_year %>
    <%= f.input :number_of_pages %>
    <%= f.button :submit, :class => 'btn-custom2'%>
<%end%>