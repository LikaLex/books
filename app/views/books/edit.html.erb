

<div class="col-md-6 col-md-offset-3">

  <div class="edit-book-form"><h1>Edit Book</h1>

      <%= simple_form_for @book, :html => {:multipart => true} do |f| %>
          <%= f.select :category_id, @categories%>
          <%= f.file_field :book_img %>
          <%= f.input :title, label: 'Book Title '%>
          <%= f.input :description%>
          <%= f.select :author_id, @authors%>
          <%= f.select :publisher_id, @publishers%>
          <%= f.select :age_id, @ages%>
          <%= f.input :price %>
          <%= f.input :publication_year %>
          <%= f.input :number_of_pages %>
          <%= link_to 'Cancel', book_path, class: 'btn-cancel' %>
          <%= f.button :submit, :class => "btn-custom2"%>
      <%end%>
  </div>

</div>