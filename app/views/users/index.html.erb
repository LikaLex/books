<div class="row">

  <% @users.each do |user| %>

      <div class="col-md-3">
        <a href="/users/<%= user.id %>" >
          <%= image_tag user.avatar.url(:medium), class: 'user' %>
          <% if user.first_name.blank?%>
              user_id <%= link_to  user.id, user_path(user.id) %>
          <% elsif user.last_name.blank? %>
              <%= link_to user.first_name , user_path(user.id) %>

          <% else %>
              <%= link_to user.first_name + " " + user.last_name, user_path(user.id) %> </p>
          <% end %>
        </a>
      </div>

  <% end %>

</div>


<div class="pagniation-wrapper">

  <%= will_paginate @users, renderer: BootstrapPagination::Rails,
                    previous_label:'Previous', next_label: 'Next', inner_window:1, outer_window:0 %>
</div>