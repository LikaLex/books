<div class="row">

  <% @publishers.each do |publisher| %>

      <div class="col-md-3">
        <a href="/publishers/<%= publisher.id %>" >
          <%= image_tag publisher.publisher_avatar.url(:medium), class: 'publisher' %>
          <%= publisher.title%>
        </a>
      </div>

  <% end %>

</div>


<div class="pagniation-wrapper">

  <%= will_paginate @publishers, renderer: BootstrapPagination::Rails,
                    previous_label:'Previous', next_label: 'Next', inner_window:1, outer_window:0 %>
</div>