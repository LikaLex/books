
<div class="row">
  <div class="col-md-4">

    <%= image_tag @publisher.publisher_avatar.url(:original), class: 'publisher-show' %>

  </div>
  <div class="col-md-8">
    <div class="book-info">
      <h2 class="book-title"><%= @publisher.title%></h2>
      <p class="book-desc"><%= @publisher.description%></p>
    </div>
    <%= link_to 'Back to publishers', publishers_path, class: 'btn-publisher' %>
    <%= link_to 'Edit', edit_publisher_path, class: 'btn-publisher' %>
  </div>

</div>