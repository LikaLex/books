<h1>Edit Author</h1>


<%= simple_form_for @author do |f| %>
    <%= f.file_field :author_avatar %>
    <%= f.input :name %>
    <%= f.input :about%>
    <%= f.input :age%>
    <%= f.input :gender_id, label: 'Gender(1 - male, 2 - female)'%>
    <%= link_to 'Cancel', author_path, class: 'btn-cancel' %>
    <%= f.button :submit, :class => 'btn-custom2'%>

<%end%>



