
<div class="row">
  <div class="col-md-4">

    <%= image_tag @author.author_avatar.url(:original), class: 'user-show' %>

  </div>

  <div class="col-md-8">
    <div class="book-info">
      <h2 class="book-title"><%= @author.name%></h2>
      <p class="book-desc"><%= @author.about%></p>
      <%= link_to 'Back', authors_path, class: 'btn-user' %>
      <%= link_to 'Edit', edit_author_path, class: 'btn-user' %>


    </div>

  </div>

</div>
